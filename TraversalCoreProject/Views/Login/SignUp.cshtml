@model TraversalCoreProject.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>RegistrationForm_v10 by Colorlib</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- LINEARICONS -->
    <link rel="stylesheet" href="~/colorlib-regform-26/fonts/linearicons/style.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/colorlib-regform-26/css/style.css">
</head>

<body>

    <div class="wrapper">
        <div class="inner">
            <img src="images/image-1.png" alt="" class="image-1">
            <form method="post">
                <h3>Yeni Hesap Oluşturun</h3>
                <div class="form-holder">
                    <span class="lnr lnr-user" asp-validation-for="Name"></span>
                    <input type="text" class="form-control" placeholder="Adınız" name="Name">
                </div>
                <div class="form-holder">
                    <span class="lnr lnr-phone-handset" asp-validation-for="Surname"></span>
                    <input type="text" class="form-control" placeholder="Soyadınız" name="Surname">
                </div>
                <div class="form-holder">
                    <span class="lnr lnr-envelope" asp-validation-for="Mail"></span>
                    <input type="text" class="form-control" placeholder="Mail Adresiniz" name="Mail">
                </div>


                <div class="form-holder">
                    <span class="lnr lnr-envelope" asp-validation-for="Username"></span>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adınız" name="Username">
                </div>

                <div class="form-holder">
                    <span class="lnr lnr-lock" asp-validation-for="Password"></span>
                    <input type="password" class="form-control" placeholder="Şifreniz" name="Password">
                </div>
                <div class="form-holder">
                    <span class="lnr lnr-lock" asp-validation-for="ConfirmPassword"></span>
                    <input type="password" class="form-control" placeholder="Şifre Tekrar" name="ConfirmPassword">
                </div>

                <button>
                    <span>Kayıt Ol</span>
                </button>
            </form>
            <img src="/colorlib-regform-26/images/image-2.png" alt="" class="image-2">
        </div>
    </div>


    <script src="~/colorlib-regform-26/js/jquery-3.3.1.min.js"></script>
    <script src="~/colorlib-regform-26/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>